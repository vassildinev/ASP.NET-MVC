@model dynamic

@Html.BeginForm("Post", "BitCalculator")
<div class="control-group">
    <label class="control-label" for="qt">Quantity</label>
    <div class="controls">
        <input class="form-control" name="Quantity" type="text" value="@Model">
    </div>
</div>
<div class="control-group">
    <label class="control-label" for="type">Type</label>
    <div class="controls">
        <select name="Type" class="form-control">
            <option selected="selected" value="b">bit - b</option>
            <option value="B">Byte - B</option>
            <option value="Kb">Kilobit - Kb</option>
            <option value="KB">Kilobyte - KB</option>
            <option value="Mb">Megabit - Mb</option>
            <option value="MB">Megabyte - MB</option>
            <option value="Gb">Gigabit - Gb</option>
            <option value="GB">Gigabyte - GB</option>
            <option value="Tb">Terabit - Tb</option>
            <option value="TB">Terabyte - TB</option>
            <option value="Pb">Petabit - Pb</option>
            <option value="PB">Petabyte - PB</option>
            <option value="Eb">Exabit - Eb</option>
            <option value="EB">Exabyte - EB</option>
            <option value="Zb">Zettabit - Zb</option>
            <option value="ZB">Zettabyte - ZB</option>
            <option value="Yb">Yottabit - Yb</option>
            <option value="YB">Yottabyte - YB</option>
        </select>
    </div>
</div>
<div class="control-group">
    <input class="btn btn-primary btn-sm" type="submit" value="GO">
</div>
<div id="resPost" style="margin-top:15px">
    <table class="table table-striped table-condensed">
        <tbody>
            <tr>
                <td width="120">Bit</td>
                <td width="150">@Model</td>
            </tr>
            <tr>
                <td width="120">Byte</td>
                <td width="150">@(Model * 8)</td>
            </tr>
            <tr>
                <td width="120">Kilobit</td>
                <td width="150">@(Model * 1024)</td>
            </tr>
            <tr>
                <td width="120">Kilobyte</td>
                <td width="150">@(Model * 8 * 1024)</td>
            </tr>
            <tr>
                <td width="120">Megabit</td>
                <td width="150">@(Model * 1024 * 1024)</td>
            </tr>
            <tr>
                <td width="120">Megabyte</td>
                <td width="150">@(Model * 8 * 1024 * 1024)</td>
            </tr>
            <tr>
                <td width="120">Gigabit</td>
                <td width="150">@(Model * 1024 * 1024 * 1024)</td>
            </tr>
            <tr>
                <td width="120">Gigabyte</td>
                <td width="150">@(Model * 8 * 1024 * 1024 * 1024)</td>
            </tr>
            <tr>
                <td width="120">Terabit</td>
                <td width="150">@(Model * 1024 * 1024 * 1024 * 1024)</td>
            </tr>
            <tr>
                <td width="120">Terabyte</td>
                <td width="150">@(Model * 8 * 1024 * 1024 * 1024 * 1024)</td>
            </tr>
            <tr>
                <td width="120">Petabit</td>
                <td width="150">@(Model * 1024 * 1024 * 1024 * 1024 * 1024)</td>
            </tr>
            <tr>
                <td width="120">Petabyte</td>
                <td width="150">@(Model * 8 * 1024 * 1024 * 1024 * 1024 * 1024)</td>
            </tr>
            <tr>
                <td width="120">Exabit</td>
                <td width="150">@(Model * 1024 * 1024 * 1024 * 1024 * 1024)</td>
            </tr>
            <tr>
                <td width="120">Exabyte</td>
                <td width="150">@(Model * 8 * 1024 * 1024 * 1024 * 1024 * 1024 * 1024)</td>
            </tr>
            <tr>
                <td width="120">Zettabit</td>
                <td width="150">@(Model * 1024 * 1024 * 1024 * 1024 * 1024 * 1024)</td>
            </tr>
            <tr>
                <td width="120">Zettabyte</td>
                <td width="150">@(Model * 8 * 1024 * 1024 * 1024 * 1024 * 1024 * 1024)</td>
            </tr>
            <tr>
                <td width="120">Yottabit</td>
                <td width="150">@(Model * 1024 * 1024 * 1024 * 1024 * 1024 * 1024 * 1024)</td>
            </tr>
            <tr>
                <td width="120">Yottabyte</td>
                <td width="150">@(Model * 8 * 1024 * 1024 * 1024 * 1024 * 1024 * 1024 * 1024)</td>
            </tr>
        </tbody>
    </table>
</div>